<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_look_up_province_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indigo2"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="@font/rubik"
            android:paddingBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DKI Jakarta"
            style="@style/h4">
        </TextView>

        <LinearLayout
            android:id="@+id/iv_look_up_confirmed_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/blue_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_look_up_recovered_case"
            app:layout_constraintTop_toBottomOf="@id/tv_look_up_province_name">
            <TextView
                android:id="@+id/tv_look_up_confirmed_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="16538">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_look_up_recovered_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/green_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_look_up_death_case"
            app:layout_constraintStart_toEndOf="@id/iv_look_up_confirmed_case"
            app:layout_constraintTop_toBottomOf="@id/tv_look_up_province_name">
            <TextView
                android:id="@+id/tv_look_up_recovered_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik"
                android:textStyle="bold"
                tools:text= "10444">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_look_up_death_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_look_up_recovered_case"
            app:layout_constraintTop_toBottomOf="@id/tv_look_up_province_name">
            <TextView
                android:id="@+id/tv_look_up_death_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="736">
            </TextView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

