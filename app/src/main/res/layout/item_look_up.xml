<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_look_up_province_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indigo2"
            android:textSize="24sp"
            android:fontFamily="@font/rubik"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DKI Jakarta"
            style="@style/h4">
        </TextView>

        <ImageView
            android:id="@+id/iv_look_up_confirmed_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blue_circle"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_up_province_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/tv_look_up_confirmed_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_look_up_confirmed_case"
            app:layout_constraintEnd_toEndOf="@+id/iv_look_up_confirmed_case"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_look_up_confirmed_case"
            app:layout_constraintTop_toTopOf="@+id/iv_look_up_confirmed_case"
            tools:text="16538">
        </TextView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/green_circle"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_up_province_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/tv_look_up_recovered_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_up_province_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="16sp"
            tools:text= "10444"
            android:textColor="@color/white"
            android:fontFamily="@font/rubik"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/iv_look_up_death_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/red_circle"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_up_province_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/tv_look_up_death_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_look_up_province_name"
            app:layout_constraintEnd_toEndOf="@+id/iv_look_up_death_case"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_look_up_death_case"
            app:layout_constraintTop_toBottomOf="parent"
            tools:text="736">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

